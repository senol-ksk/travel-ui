{
  "name": "travel-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev-https": "next dev --experimental-https",
    "dev-https-inspect": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS='--inspect' next dev --experimental-https",
    "build": "next build --turbopack",
    "start": "next start",
    "prepare": "husky && pnpm run theme",
    "test:watch": "vitest",
    "test:staged": "vitest --run",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run prettier:check && pnpm run lint && pnpm run typecheck && pnpm run test:staged",
    "prettier": "prettier --write **/**/*.{ts,tsx,css}",
    "prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "theme": "npx tailwind-preset-mantine src/styles/mantine/index.ts -o src/styles/theme.css"
  },
