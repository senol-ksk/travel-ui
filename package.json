    "embla-carousel-react": "^8.6.0",
    "i18next": "^25.2.1",
    "intl-tel-input": "^25.3.1",
    "md5": "^2.3.0",
    "next": "15.3.3",
    "next-auth": "5.0.0-beta.25",
    "next-view-transitions": "^0.3.4",
    "nuqs": "^2.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
